<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>name.richardson.james.bukkit</groupId>
  <artifactId>bukkit-utilities</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <name>BukkitUtilities</name>
  <description>A library with common classes and interfaces that are shared across my plugins.</description>
  <repositories>
    <repository>
      <id>bukkit-repo</id>
      <url>http://repo.bukkit.org/content/groups/public</url>
    </repository>  
  </repositories>
  <dependencies>
	 <dependency>
	   <groupId>org.bukkit</groupId>
	   <artifactId>bukkit</artifactId>
	   <version>1.1-R3</version>
     </dependency>
  </dependencies>
  <distributionManagement>  
    <!-- Publish the versioned releases here -->  
    <repository>  
      <id>release</id>  
      <name>My public repository</name>  
      <url>scp://repository.james.richardson.name/srv/www/repository.james.richardson.name</url>  
    </repository>  
  </distributionManagement>    
  
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  
  <scm>
    <connection>scm:git:git://github.com/grandwazir/BukkitUtilities.git</connection>
    <url>https://github.com/grandwazir/BukkitUtilities</url>
    <developerConnection>scm:git:git@github.com:grandwazir/BukkitUtilities.git</developerConnection>
  </scm>
  
  <build>
  	<sourceDirectory>${basedir}/src/main/java/</sourceDirectory>
    <plugins>
  
      <!-- Release -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.2.2</version>
        <configuration>
          <tagNameFormat>v@{project.version}</tagNameFormat>        
        </configuration>
      </plugin>
  
      <!-- Compile plugin -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
      </plugin>
      
      <!-- JAR creation plugin -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.3.1</version>
        <configuration>
          <archive>
            <addMavenDescriptor>true</addMavenDescriptor>
            <manifest>
              <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      
   </plugins>
  </build>

      
</project>